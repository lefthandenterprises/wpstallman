{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch (Launcher)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/WPStallman.Launcher/WPStallman.Launcher.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "justMyCode": true,
      "env": {
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
        "DOTNET_NOLOGO": "1"
      }
    },
    {
      "name": ".NET Launch (GUI Modern)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "-f", "net8.0",
        "--project",
        "${workspaceFolder}/src/WPStallman.GUI.Modern/WPStallman.GUI.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "env": {
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
        "DOTNET_NOLOGO": "1"
      }
    },
    {
      "name": ".NET Launch (GUI Legacy)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "-f", "net8.0",
        "--project",
        "${workspaceFolder}/src/WPStallman.GUI.Legacy/WPStallman.GUI.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "env": {
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
        "DOTNET_NOLOGO": "1"
      }
    },
    {
      "name": ".NET Run (GUI.Windows, net8.0-windows)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "-f", "net8.0-windows",
        "--project",
        "${workspaceFolder}/src/WPStallman.GUI.Windows/WPStallman.GUI.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build:gui.windows",
      "console": "internalConsole",
      "justMyCode": true,
      "env": {
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
        "DOTNET_NOLOGO": "1"
      }
    },

    // â›” Remove the wildcard-based launcher: VS Code won't expand globs here.
    // If you really want a post-build direct launch, point to the actual EXE:
    {
      "name": "Launch Built App (direct exe)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/src/WPStallman.GUI.Windows/bin/Debug/net8.0-windows/WPStallman.GUI.exe",
      "cwd": "${workspaceFolder}/src/WPStallman.GUI.Windows/bin/Debug/net8.0-windows",
      "preLaunchTask": "build:gui.windows",
      "console": "internalConsole",
      "justMyCode": true,
      "env": {
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
        "DOTNET_NOLOGO": "1"
      }
    }
  ]
}
