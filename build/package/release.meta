# ===== App / Org =====
APP_ID="com.wpstallman.app"
APP_NAME="W.P. Stallman"
APP_NAME_SHORT="wpstallman"
APP_SHORTDESC="WordPress scaffolding &amp; packaging toolkit"
APP_DESC="W.P. Stallman is a toolkit designed for WordPress developers to easily scaffold, package, and deploy WordPress plugins and projects."
HOMEPAGE_URL="https://lefthandenterprises.com/#/projects/wpstallman"
APP_ICON_SRC="$ROOT/src/WPStallman.Assets/logo/app-icon-256.png"


PUBLISHER_NAME="Left Hand Enterprises, LLC"
PUBLISHER_EMAIL="patrick@lefthandenterprises.com"
LICENSE_ID="MIT"

# ===== Versioning =====
# Prefer Directory.Build.props; this is a fallback/default
APP_VERSION="${APP_VERSION:-$(grep -m1 -oP '(?<=<Version>)[^<]+' "$ROOT/Directory.Build.props" 2>/dev/null || echo 1.0.0)}"
APP_VER_SUFFIX="${APP_VER_SUFFIX:-}"

# ===== Build Settings =====
DOCKERFILE_MODERN="$ROOT/Dockerfile.modern"
DOCKERFILE_LEGACY="$ROOT/Dockerfile.legacy"
IMAGE_NAME_MODERN="wpstallman-modern-sdk"
IMAGE_NAME_LEGACY="wpstallman-legacy-sdk"

# ===== .NET =====
TFM="net8.0"
RID="linux-x64"
CONF="Release"

# ===== Outputs =====
APP_IMAGE_DIR="$ROOT/artifacts/packages/appimage"
OUT_DIR="$ROOT/artifacts/packages/zip"

# ===== Misc =====
BUILD_NUMBER="${BUILD_NUMBER:-$(date +%Y%m%d%H%M)}"
